                <ImageView
                    android:id="@+id/img_payrecord"
                    android:layout_width="@dimen/dimen_8_dip"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/youjt" />
                
            </RelativeLayout>
            
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_0.5_dip"
                android:layout_marginLeft="@dimen/dimen_18_dip"
                android:layout_marginRight="@dimen/dimen_20_dip"
                android:layout_marginTop="@dimen/dimen_20_dip"
                android:background="#f0f0f0" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16_dip"
                android:layout_marginRight="@dimen/dimen_20_dip" >

                <TextView
                    android:id="@+id/txt_ver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:text="版本号2.0.0"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_15_dip" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>
    
    <TextView
        android:id="@+id/txt_exit"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>