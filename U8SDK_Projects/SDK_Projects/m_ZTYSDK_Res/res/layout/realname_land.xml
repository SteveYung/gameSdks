<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimen_599_dip"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/sdk_main_bg"
    android:orientation="vertical" >

    <RelativeLayout
    	android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_61_dip">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="游戏实名登记"
            android:textColor="#000000"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <ImageView
            android:id="@+id/close"
            android:layout_width="@dimen/dimen_19_dip"
            android:layout_height="@dimen/dimen_19_dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_53_dip"
            android:src="@drawable/cuohao" />

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/dimen_19_dip"
            android:layout_height="@dimen/dimen_19_dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_53_dip"
            android:src="@drawable/zuojiantou" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="#d6d6d6" />
    	
	</RelativeLayout>
	
    <FrameLayout
        android:id="@+id/pay_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp" >
    </FrameLayout>

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical" >
        
         <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_61_dip"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="@dimen/dimen_18_dip"
            android:textColor="#000000"
            android:text="根据《网络游戏管理暂行办法》请先登记本人实名信息" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="#d6d6d6" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/RelativeLayout2"
        android:layout_width="match_parent"
        android:layout_below="@+id/RelativeLayout1"
        android:layout_height="@dimen/dimen_61_dip"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_50_dip"
            android:textSize="@dimen/dimen_18_dip"
            android:textColor="#000000"
            android:text="姓名"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="#d6d6d6" />

        <EditText
            android:id="@+id/et_Name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_67_dip"
            android:layout_toRightOf="@+id/textView2"
            android:background="@null"
            android:singleLine="true"
            android:hint="请填写真实姓名"
            android:textSize="@dimen/dimen_18_dip" />
        
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/RelativeLayout3"
        android:layout_width="match_parent"
        android:layout_below="@+id/RelativeLayout2"
        android:layout_height="@dimen/dimen_61_dip"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_50_dip"
            android:textSize="@dimen/dimen_18_dip"
            android:textColor="#000000"
            android:text="证件号"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="#d6d6d6" />

        <EditText
            android:id="@+id/et_Card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_50_dip"
            android:layout_toRightOf="@+id/textView3"
            android:background="@null"
            android:singleLine="true"
            android:hint="请填写真实有效身份证号"
            android:textSize="@dimen/dimen_18_dip" />
        
    </RelativeLayout>

    <LinearLayout 
        android:id="@+id/RelativeLayout4"
        android:layout_width="match_parent"
        android:layout_below="@+id/RelativeLayout3"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        
	    <ImageView
	        android:id="@+id/img_card_smt"
	        android:layout_width="@dimen/dimen_542_dip"
	        android:layout_height="@dimen/dimen_52_dip"
	        android:layout_marginTop="@dimen/dimen_20_dip"
	        android:layout_gravity="center"
	        android:src="@drawable/bt_88" />
	    
	    <LinearLayout 
	        android:layout_width="@dimen/dimen_542_dip"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:layout_marginTop="@dimen/dimen_9_dip"
	        android:orientation="horizontal">
	        
	        <ImageView
	            android:id="@+id/checkBox1"
	            android:layout_width="@dimen/dimen_18_dip"
	            android:layout_height="@dimen/dimen_18_dip"
	            android:layout_marginTop="@dimen/dimen_4_dip"
	            android:background="@drawable/img05"
	            android:textColor="#666666"
	            android:textSize="@dimen/dimen_16_dip" />
	        
		    <TextView
		        android:id="@+id/textView4"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="阅读并同意"
		        android:textColor="#000000"
		        android:textSize="@dimen/dimen_18_dip" />
		        
        	<TextView
		        android:id="@+id/txt_real_agreement"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="征信授权书"
		        android:textColor="#2b79c7"
		        android:textSize="@dimen/dimen_18_dip" />
	        
	    </LinearLayout>
	
	    <TextView
	        android:id="@+id/TextView01"
	        android:layout_width="@dimen/dimen_542_dip"
	        android:layout_height="wrap_content"
	        android:text="如需帮助，请联系客服。QQ：4009611191    电话：4009611191"
	        android:textColor="#000000"
	        android:layout_gravity="center"
	        android:layout_marginBottom="@dimen/dimen_9_dip"
	        android:textSize="@dimen/dimen_18_dip" />
	        
	</LinearLayout>
         
     </LinearLayout>

</LinearLayout>