                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20_dip"
                android:layout_marginLeft="@dimen/dimen_18_dip"
                android:layout_marginRight="@dimen/dimen_20_dip" >
                
                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="@dimen/dimen_26_dip"
                    android:layout_height="@dimen/dimen_26_dip"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/qhzh" />

                <TextView
                    android:id="@+id/txt_otherusn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="@dimen/dimen_14_dip"
                    android:layout_toRightOf="@+id/imageView5"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_18_dip"
