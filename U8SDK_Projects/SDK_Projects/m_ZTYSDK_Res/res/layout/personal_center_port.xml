                <ImageView
                    android:id="@+id/img_changepsd"
                    android:layout_width="@dimen/dimen_8_dip"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/youjt" />
                
            </RelativeLayout>
            
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_0.5_dip"
                android:layout_marginLeft="@dimen/dimen_18_dip"
                android:layout_marginRight="@dimen/dimen_20_dip"
                android:layout_marginTop="@dimen/dimen_17_dip"
                android:background="#f0f0f0" />

            <RelativeLayout
                android:id="@+id/lin_otherusn"
