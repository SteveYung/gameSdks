<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/sdk_main_bg"
    android:layout_gravity="center"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="@dimen/dimen_427_dip"
        android:layout_height="@dimen/dimen_74_dip"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="游戏实名登记"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000" />

        <ImageView
            android:id="@+id/close"
            android:layout_width="@dimen/dimen_19_dip"
            android:layout_height="@dimen/dimen_19_dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_13_dip"
            android:src="@drawable/cuohao" />

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/dimen_19_dip"
            android:layout_height="@dimen/dimen_19_dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_13_dip"
            android:src="@drawable/zuojiantou" />
        
    </RelativeLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d6d6d6" />

    <RelativeLayout
        android:layout_width="@dimen/dimen_427_dip"
        android:layout_height="@dimen/dimen_69_dip" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="@dimen/dimen_255_dip"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="根据《网络游戏管理暂行办法》请先登记本人实名信息"
            android:textSize="@dimen/dimen_17_dip"
            android:textColor="#000000"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </RelativeLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d6d6d6" />

    <RelativeLayout
        android:layout_width="@dimen/dimen_427_dip"
        android:layout_height="@dimen/dimen_67_dip" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_13_dip"
            android:text="姓名"
            android:textSize="@dimen/dimen_17_dip"
            android:textColor="#000000"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/et_Name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/textView3"
            android:layout_marginLeft="@dimen/dimen_73_dip"
            android:background="@null"
            android:hint="请填写真实姓名"
            android:textSize="@dimen/dimen_17_dip"
            android:singleLine="true" />

    </RelativeLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d6d6d6" />

    <RelativeLayout
        android:layout_width="@dimen/dimen_427_dip"
        android:layout_height="@dimen/dimen_67_dip" >

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_13_dip"
            android:text="证件号"
            android:textSize="@dimen/dimen_17_dip"
            android:textColor="#000000"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/et_Card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/textView4"
            android:layout_marginLeft="@dimen/dimen_55_dip"
            android:background="@null"
            android:hint="请填写真实有效身份证号"
            android:textSize="@dimen/dimen_17_dip"
            android:singleLine="true" />

    </RelativeLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d6d6d6" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/img_card_smt"
            android:layout_width="@dimen/dimen_394_dip"
            android:layout_height="@dimen/dimen_52_dip"
            android:layout_marginTop="@dimen/dimen_20_dip"
            android:src="@drawable/bt_666" />

        <LinearLayout 
	        android:layout_width="@dimen/dimen_394_dip"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:layout_marginTop="@dimen/dimen_9_dip"
	        android:orientation="horizontal">
	        
	        <ImageView
	            android:id="@+id/checkBox1"
	            android:layout_width="@dimen/dimen_14_dip"
	            android:layout_height="@dimen/dimen_14_dip"
	            android:layout_marginTop="@dimen/dimen_4_dip"
	            android:background="@drawable/img05"
	            android:textColor="#666666"
	            android:textSize="@dimen/dimen_14_dip" />
	        
		    <TextView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="阅读并同意"
		        android:textColor="#000000"
		        android:textSize="@dimen/dimen_14_dip" />
		        
        	<TextView
		        android:id="@+id/txt_real_agreement"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="征信授权书"
		        android:textColor="#2b79c7"
		        android:textSize="@dimen/dimen_14_dip" />
	        
	    </LinearLayout>
        
        <TextView
            android:id="@+id/textView6"
            android:layout_width="@dimen/dimen_394_dip"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="@dimen/dimen_14_dip"
            android:text="如需帮助，请联系客服。QQ：4009611191 电话：4009611191" />
        
    </LinearLayout>
    
    <FrameLayout
        android:id="@+id/pay_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp" >
    </FrameLayout>

</LinearLayout>
