<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimen_427_dip"
    android:layout_height="@dimen/dimen_413_dip"
    android:layout_gravity="center"
    android:layout_marginLeft="@dimen/dimen_20_dip"
    android:layout_marginRight="@dimen/dimen_20_dip"
    android:background="@drawable/sdk_main_bg"
    android:orientation="vertical" >

    
    
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_73_dip">

        <include layout="@layout/mzyw_pp_title" />

        <include layout="@layout/mzyw_pp_logo" />
    </RelativeLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1_dip"
        android:layout_marginLeft="@dimen/dimen_1_dip"
        android:layout_marginRight="@dimen/dimen_1_dip"
        android:background="#d6d6d6"/>
    
    <LinearLayout
        android:id="@+id/bind_phnum_layout"
        android:layout_width="@dimen/dimen_395_dip"
        android:layout_height="@dimen/dimen_59_dip"
        android:layout_marginLeft="@dimen/dimen_16_dip"
        android:layout_marginRight="@dimen/dimen_16_dip"
        android:layout_marginTop="@dimen/dimen_33_dip"
        android:background="@drawable/txt_while"
        android:orientation="horizontal" >

        <LinearLayout 
            android:layout_width="@dimen/dimen_45_dip"
            android:layout_height="@dimen/dimen_59_dip"
            android:gravity="center" >
        
	        <ImageView
	            android:layout_width="@dimen/dimen_15_dip"
	            android:layout_height="@dimen/dimen_30_dip"
	            android:src="@drawable/shoujike" />
        </LinearLayout>
        <EditText
            android:id="@+id/bind_phnum_et"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:digits="1234567890"
            android:gravity="center_vertical|left"
            android:hint="@string/bind_promit_01"
            
            android:inputType="phone"
            android:singleLine="true"
            android:textSize="@dimen/dimen_17_dip" >

            <requestFocus />
        </EditText>
    </LinearLayout>

    <TextView
        android:id="@+id/bind_unbind_notice_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_13_dip"
        android:layout_marginRight="@dimen/dimen_13_dip"
        android:layout_marginTop="@dimen/dimen_13_dip"
        android:textSize="@dimen/dimen_17_dip"
        android:text="\t\t您即将执行解除绑定操作，点击获取验证码后，我们会将验证码以短信形式发送到您的绑定手机，请注意查收"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="@dimen/dimen_395_dip"
        android:layout_height="@dimen/dimen_59_dip"
        android:layout_marginLeft="@dimen/dimen_16_dip"
        android:layout_marginRight="@dimen/dimen_16_dip"
        android:background="@drawable/txt_while"
        android:layout_marginTop="@dimen/dimen_15_dip" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <LinearLayout 
	            android:layout_width="@dimen/dimen_45_dip"
	            android:layout_height="@dimen/dimen_59_dip"
	            android:gravity="center" >
            
	            <ImageView
	                android:layout_width="@dimen/dimen_25_dip"
	                android:layout_height="@dimen/dimen_17_dip"
	                android:src="@drawable/email" />
			</LinearLayout>
            <EditText
                android:id="@+id/bind_code_et"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:digits="1234567890"
                android:gravity="center_vertical|left"
                android:hint="@string/bind_promit_03"
                android:inputType="phone"
                android:singleLine="true"
                android:textSize="@dimen/dimen_17_dip" >
            </EditText>
        </LinearLayout>

        <Button
            android:id="@+id/bind_getcode_bt"
            android:layout_width="@dimen/dimen_137_dip"
            android:layout_height="@dimen/dimen_40_dip"
            android:layout_marginLeft="10dp"
            android:background="@drawable/yuankuang_red"
            android:text="@string/bind_getcode_bt_str"
            android:textColor="@color/xdw_white"
            android:layout_marginRight="5dp"
            android:layout_gravity="center"
            android:textSize="@dimen/dimen_17_dip" />
    </LinearLayout>

    <Button
        android:id="@+id/bind_submit_bt"
        android:layout_width="@dimen/dimen_395_dip"
        android:layout_height="@dimen/dimen_52_dip"
        android:layout_marginLeft="@dimen/dimen_16_dip"
        android:layout_marginRight="@dimen/dimen_16_dip"
        android:layout_marginTop="@dimen/dimen_20_dip"
        android:background="@drawable/btn_15" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_marginLeft="@dimen/dimen_16_dip"
        android:layout_marginRight="@dimen/dimen_16_dip"
        android:layout_marginTop="@dimen/dimen_20_dip"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/checkBox1"
            android:layout_width="@dimen/dimen_16_dip"
            android:layout_height="@dimen/dimen_16_dip"
            android:background="@drawable/img05"
            android:layout_marginTop="@dimen/dimen_4_dip"
            android:textColor="#666666"
            android:layout_gravity="center"
            android:textSize="@dimen/dimen_16_dip" />

        <TextView
            android:id="@+id/checkBox2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/checkBox1"
            android:layout_alignBottom="@+id/checkBox1"
            android:layout_toRightOf="@+id/checkBox1"
            android:layout_marginLeft="@dimen/dimen_8_dip"
            android:text="同意"
            android:layout_gravity="center"
            android:textColor="#666666"
            android:textSize="@dimen/dimen_16_dip" />
        
        <TextView
            android:id="@+id/txt_zcxy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/checkBox2"
            android:layout_alignBottom="@+id/checkBox2"
            android:layout_toRightOf="@+id/checkBox2"
            android:text="用户协议"
            android:layout_gravity="center"
            android:textColor="#2b79c7"
            android:textSize="@dimen/dimen_16_dip" />


        <TextView
            android:id="@+id/regist_quick_tv"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:text="一键注册 >>"
            android:textColor="#666666"
            android:textSize="@dimen/dimen_16_dip" />
        
        <TextView
            android:id="@+id/regist_quick_tv2"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:text="跳过此步骤 >>"
            android:textColor="#666666"
            android:textSize="@dimen/dimen_16_dip" />
        
    </RelativeLayout>

</LinearLayout>