                    android:id="@+id/img_otherusn"
                    android:layout_width="@dimen/dimen_8_dip"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/youjt" />
                
            </RelativeLayout>
            
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_0.5_dip"
                android:layout_marginLeft="@dimen/dimen_18_dip"
                android:layout_marginRight="@dimen/dimen_20_dip"
                android:layout_marginTop="@dimen/dimen_17_dip"
                android:background="#f0f0f0" />

            <RelativeLayout
                android:id="@+id/lin_payrecord"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20_dip"
                android:layout_marginLeft="@dimen/dimen_18_dip"
                android:layout_marginRight="@dimen/dimen_20_dip" >
                
                <ImageView
                    android:id="@+id/imageView22"
                    android:layout_width="@dimen/dimen_26_dip"
                    android:layout_height="@dimen/dimen_26_dip"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/czjl" />

                <TextView
                    android:id="@+id/txt_payrecord"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_26_dip"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="@dimen/dimen_14_dip"
                    android:layout_toRightOf="@+id/imageView22"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_18_dip"
