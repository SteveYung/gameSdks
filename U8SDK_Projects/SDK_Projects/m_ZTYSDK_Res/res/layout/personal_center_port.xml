                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_18_dip" />

            </RelativeLayout>
            
            <View 
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_0.5_dip"
                android:background="#f0f0f0"
                android:layout_marginTop="@dimen/dimen_10_dip"
                android:layout_marginLeft="@dimen/dimen_18_dip"
                android:layout_marginRight="@dimen/dimen_20_dip" />

            <RelativeLayout
                android:id="@+id/lin_upgrade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_33_dip"
                android:layout_marginLeft="@dimen/dimen_18_dip"
                android:layout_marginRight="@dimen/dimen_20_dip" >

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="@dimen/dimen_26_dip"
