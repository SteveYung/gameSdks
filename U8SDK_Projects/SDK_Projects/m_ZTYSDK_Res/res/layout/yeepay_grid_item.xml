<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/sdk_main_bg">

    <TextView 
        android:id="@+id/yeepay_grid_item_amount_tv"
        android:layout_width="@dimen/dimen_89_dip"
        android:layout_height="@dimen/dimen_39_dip"
        android:gravity="center"
        android:textColor="#666666"
        android:textSize="@dimen/dimen_16_dip" />
    <EditText 
        android:id="@+id/yeepay_grid_item_amount_et"
        android:layout_width="@dimen/dimen_88_dip"
        android:layout_height="@dimen/dimen_37_dip"
        android:background="@null"
        android:visibility="gone"
        android:inputType="number"
        android:gravity="center"
        android:hint="其他金额"
        android:textColor="#666666"
        android:textSize="@dimen/dimen_16_dip"
        android:clickable="false"
        android:paddingLeft="2dp"
        android:maxLength="4"
        />

</RelativeLayout>