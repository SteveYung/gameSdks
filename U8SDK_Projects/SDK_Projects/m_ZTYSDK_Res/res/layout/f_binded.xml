<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimen_427_dip"
    android:layout_height="@dimen/dimen_413_dip"
    android:layout_gravity="center"
    android:layout_marginLeft="@dimen/dimen_20_dip"
    android:layout_marginRight="@dimen/dimen_20_dip"
    android:background="@drawable/sdk_main_bg"
    android:orientation="vertical" >

    
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_73_dip">

        <include layout="@layout/mzyw_pp_title" />

        <include layout="@layout/mzyw_pp_logo" />
    </RelativeLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:background="#d6d6d6"/>

    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dimen_27_dip"
        android:orientation="horizontal">
	    <ImageView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_horizontal"
	        android:layout_marginTop="@dimen/dimen_27_dip"
	        android:src="@drawable/iphone_hiukou" />
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="5dp"
	        android:textSize="@dimen/dimen_17_dip"
	        android:textColor="#666666"
	        android:text="手机绑定"
	        android:layout_gravity="center"/>
	    
	</LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_16_dip"
        android:layout_marginRight="@dimen/dimen_16_dip"
        android:layout_gravity="center"
        android:orientation="horizontal" >

        <!-- <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/mz_text_dsh"
            android:text="当前状态：" /> -->

        <TextView
            android:id="@+id/binded_bindpnum_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已绑定手机135****9966"
            android:gravity="center_horizontal"
            android:textColor="#e4573b"
            android:textSize="@dimen/dimen_17_dip" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="#333333"
        android:layout_marginTop="@dimen/dimen_33_dip"
        android:textSize="@dimen/dimen_15_dip"
        android:text="温馨提示：可通过手机号登陆或找回密码" />

    <Button 
        android:id="@+id/binded_unbind_bt"
        android:layout_width="@dimen/dimen_395_dip"
        android:layout_height="@dimen/dimen_52_dip"
        android:layout_marginLeft="@dimen/dimen_16_dip"
        android:layout_marginRight="@dimen/dimen_16_dip"
        android:layout_marginTop="@dimen/dimen_20_dip"
        android:background="@drawable/btn_14"/>
</LinearLayout>