<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        
        <include layout="@layout/buoy_menu_port"/>
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/dimen_356_dip"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_43_dip"
            android:background="@drawable/dhl" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="账号升级"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_23_dip" />

            <LinearLayout
                android:id="@+id/lin_back"
                android:layout_width="@dimen/dimen_53_dip"
                android:layout_height="@dimen/dimen_53_dip"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:orientation="vertical" >
                
                <ImageView
	                android:id="@+id/img_back"
	                android:layout_width="@dimen/dimen_20_dip"
	                android:layout_height="@dimen/dimen_20_dip"
	                android:src="@drawable/zuojiantou" />
                
            </LinearLayout>
            
        </RelativeLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/mzground" >
            
            <LinearLayout
                android:layout_width="@dimen/dimen_338_dip"
                android:layout_height="@dimen/dimen_49_dip"
                android:layout_marginTop="@dimen/dimen_43_dip"
                android:layout_gravity="center"
                android:background="@drawable/txt_while" >

                <LinearLayout
                    android:layout_width="@dimen/dimen_45_dip"
                    android:layout_height="match_parent"
                    android:gravity="center" >

                    <ImageView
                        android:layout_width="@dimen/dimen_15_dip"
                        android:layout_height="@dimen/dimen_30_dip"
                        android:background="@drawable/shoujike" />
                </LinearLayout>

                <EditText
		            android:id="@+id/login_name_et"
		            android:layout_width="wrap_content"
		            android:layout_height="match_parent"
		            android:layout_weight="1"
		            android:background="@null"
		            android:gravity="center_vertical|left"
		            android:hint="请输入账号"
		            android:inputType="text"
		            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
		            android:singleLine="true"
		            android:imeOptions="actionNext"
		            android:maxLength="16"
		            android:textSize="@dimen/dimen_17_dip" >
		
		            <requestFocus />
		        </EditText>
                
                <LinearLayout
                    android:layout_width="@dimen/dimen_45_dip"
                    android:layout_height="match_parent"
                    android:gravity="center" >

                    <ImageView
			            android:id="@+id/login_delete_iv"
			            android:layout_width="@dimen/dimen_25_dip"
			            android:layout_height="@dimen/dimen_25_dip"
			            android:layout_gravity="center_vertical"
			            android:background="@drawable/yuanxingcuohao"
			            android:visibility="gone"
			            android:layout_marginRight="5dp" />
                </LinearLayout>
                
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="@dimen/dimen_338_dip"
                android:layout_height="@dimen/dimen_49_dip"
                android:layout_marginTop="@dimen/dimen_15_dip"
                android:layout_gravity="center"
                android:background="@drawable/txt_while" >

                <LinearLayout
                    android:layout_width="@dimen/dimen_45_dip"
                    android:layout_height="match_parent"
                    android:gravity="center" >

                    <ImageView
	            android:layout_width="@dimen/dimen_17_dip"
	            android:layout_height="@dimen/dimen_23_dip"
	            android:background="@drawable/suozi_ccc" />
                </LinearLayout>

                <EditText
		            android:id="@+id/login_psd_et"
		            android:layout_width="wrap_content"
		            android:layout_height="match_parent"
		            android:layout_weight="1"
		            android:background="@null"
		            android:gravity="center_vertical|left"
		            android:hint="@string/login_pwd_promit_str"
		            android:inputType="textPassword"
		            android:singleLine="true"
		            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
		            android:imeOptions="actionDone"
		            android:textSize="@dimen/dimen_17_dip" >
		        </EditText>
                
                <LinearLayout
                    android:layout_width="@dimen/dimen_45_dip"
                    android:layout_height="match_parent"
                    android:gravity="center" >

                    <ImageView
			            android:id="@+id/login_showpsd_iv"
			            android:layout_width="@dimen/dimen_33_dip"
			            android:layout_height="@dimen/dimen_20_dip"
			            android:layout_gravity="center_vertical"
			            android:src="@drawable/chakanpwd"
			            android:visibility="gone"
			            android:layout_marginRight="3dp" />
                </LinearLayout>
                
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_18_dip"
                android:layout_gravity="center" >

                <ImageView
                    android:id="@+id/bt_sub"
                    android:layout_width="@dimen/dimen_338_dip"
                    android:layout_height="@dimen/dimen_56_dip"
                    android:src="@drawable/btn_22" />
                
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/dimen_338_dip"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16_dip"
                android:layout_gravity="center"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" >
                    
                    <ImageView
			            android:id="@+id/checkBox1"
			            android:layout_width="@dimen/dimen_14_dip"
			            android:layout_height="@dimen/dimen_14_dip"
			            android:background="@drawable/img05"
			            android:textColor="#666666"
			            android:textSize="@dimen/dimen_16_dip" />
			
			        <TextView
			            android:id="@+id/checkBox2"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:text="同意"
			            android:layout_marginLeft="@dimen/dimen_8_dip"
			            android:textColor="#f0f0f0"
			            android:textSize="@dimen/dimen_12_dip" />
			        
			        <TextView
			            android:id="@+id/txt_zcxy"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:text="用户协议"
			            android:textColor="#2b79c7"
			            android:textSize="@dimen/dimen_12_dip" />

			        <TextView
			            android:id="@+id/textView2"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:visibility="gone"
			            android:text="和"
			            android:textColor="#f0f0f0"
			            android:textSize="@dimen/dimen_12_dip" />
                    
			        <TextView
			            android:id="@+id/txt_yszc"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:text="隐私政策"
			            android:visibility="gone"
			            android:textColor="#2b79c7"
			            android:textSize="@dimen/dimen_12_dip" />
			        
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="@dimen/dimen_338_dip"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16_dip"
                android:layout_gravity="center"
                android:textColor="#f0f0f0"
                android:textSize="@dimen/dimen_15_dip"
                android:text="温馨提示：完成后您可以使用新的账号密码进行登录，当前账号的数据将会保留，请放心使用。" />
            
        </LinearLayout>
        
    </LinearLayout>
    
    <TextView
        android:id="@+id/txt_exit"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    
</LinearLayout>