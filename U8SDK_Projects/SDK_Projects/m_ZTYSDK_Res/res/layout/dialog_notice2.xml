<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimen_395_dip"
    android:layout_height="@dimen/dimen_213_dip"
    android:gravity="center"
    android:background="@drawable/bind_notice_bg"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/wxts"
        android:layout_width="@dimen/dimen_350_dip"
        android:layout_height="@dimen/dimen_28_dip"
        android:layout_marginLeft="@dimen/dimen_20_dip"
        android:layout_marginRight="@dimen/dimen_20_dip"
        android:layout_marginTop="@dimen/dimen_20_dip"
        android:src="@drawable/pic_03" />

    <TextView
        android:id="@+id/dialog_notice_content_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_20_dip"
        android:layout_marginRight="@dimen/dimen_20_dip"
        android:layout_marginTop="@dimen/dimen_20_dip"
        android:gravity="center"
        android:textColor="#333333"
        android:textSize="@dimen/dimen_17_dip" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_16_dip"
        android:layout_marginRight="@dimen/dimen_16_dip"
        android:layout_marginTop="@dimen/dimen_27_dip"
        android:layout_marginBottom="@dimen/dimen_27_dip"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/dialog_notice_quit_bt"
            android:layout_width="@dimen/dimen_160_dip"
            android:layout_height="@dimen/dimen_52_dip"
            android:layout_weight="1"
            android:background="@drawable/btn_11" />

        <Button
            android:id="@+id/dialog_notice_confirm_bt"
            android:layout_width="@dimen/dimen_160_dip"
            android:layout_height="@dimen/dimen_52_dip"
            android:layout_marginLeft="@dimen/dimen_19_dip"
            android:layout_weight="1"
            android:background="@drawable/btn_12" />
    </LinearLayout>

</LinearLayout>